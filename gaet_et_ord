import random

# Mangler lige lidt hvis man g√¶tter forkert. skal undg√• det med at miste liv.

liv = 9
ord = ["pizza", "tomat", "farve", "papir", "kasse"]  # ord med 5 bogstaver
hemmeligt_ord = random.choice(ord)  # V√¶lg et tilf√¶ldigt ord fra listen
l√∏sning = list("?????")  # Tegnene er nu gemt som en liste under variablen tip
hjerte = "üíü"  # V√¶lg evt. et andet symbol fra hjemmesiden.
det_rigtige_ord = False  # Variablen skal bruges til at unders√∏ge, om spilleren har g√¶ttet rigtigt

def opdater_l√∏sning(valgt_bogstav, hemmeligt_ord, l√∏sning):
    index = 0  # Vi starter med det f√∏rste bogstav i ordet
    while index < len(hemmeligt_ord):  # S√• l√¶nge at der er flere bogstaver i ordet, skal l√∏kken k√∏re
        if valgt_bogstav == hemmeligt_ord[index]:  # Unders√∏ger om det valgte bogstav er i ordet
            l√∏sning[index] = valgt_bogstav
        index += 1  # G√• videre til n√¶ste bogstav

def spil():
    global liv, det_rigtige_ord, l√∏sning  # Brug globale variabler i funktionen
    while liv > 0:  # Spillet forts√¶tter, indtil der er 0 liv tilbage
        
        print(l√∏sning)
        print("Liv tilbage: " + hjerte * liv)
        gaet = input("G√¶t et bogstav eller hele ordet: ")
        
        if gaet == hemmeligt_ord:
            det_rigtige_ord = True
            break  # Stop l√∏kken, fordi ordet er g√¶ttet

        if gaet in hemmeligt_ord:
            opdater_l√∏sning(gaet, hemmeligt_ord, l√∏sning)
        else:
            print("Desv√¶rre. Det var forkert! Du mister et liv.")
            liv -= 1  # Tr√¶k et liv fra spilleren

    # Tjek om spilleren vandt eller tabte
    if det_rigtige_ord == True:
        print("Du vandt! Det hemmelige ord var: " + hemmeligt_ord)
    else:
        print("Desv√¶rre. Du tabte. Det hemmelige ord var " + hemmeligt_ord)

# K√∏r spillet
spil()
